{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "typeRoots": ["./node_modules/@types", "./source/types"],
    "outDir": "./dist",
    "rootDir": "./source",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "dist"]
}
